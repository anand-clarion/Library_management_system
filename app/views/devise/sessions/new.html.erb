<center>
  <h2 class ="logo"><b>Log in</b></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class = "student_field">
      <div class = "label_field"><%= f.label :email%> : </div>
      <div class = "text_field"><%= f.email_field :email, autofocus: true %></div>
    </div><br>

    <div class = "student_field">
      <div class = "label_field"><%= f.label :password %> :</div>
      <div class = "text_field"><%= f.password_field :password, autocomplete: "off" %></div>
    </div><br>

    <div><%= f.submit "Sign in" ,class: 'btn btn-primary' %></div>
  <% end %>
  <p><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
  <p>New student ?- <%= link_to "Sign up", new_registration_path(resource_name) %></p>

  <div class = "login_image">
    <%= image_tag "key.jpg" %>
  </div>
</center>

