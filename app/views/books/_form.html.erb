<%= form_for @book do |f| %>
  <% if @book.errors.any? %>
    <div class="error_explanation">
      <span><b>Errors</b></span>
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, :class => "required form-control" %>
  </div>
  <div>
    <%= f.label :author %>
    <%= f.text_field :author, :class => "required form-control" %>
  </div>
  <div>
    <%= f.label :no_of_copy %>
    <%= f.text_field :no_of_copy, :class => "required form-control" %>
  </div>
  <div>
    <%= f.submit class: 'btn btn-primary'%>
  </div>
<% end %>