<%= form_for @book_transaction do |f| %>
  <% if @book_transaction.errors.any? %>
    <div class="error_explanation">
      <span><b>Errors</b></span>
      <ul>
        <% @book_transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :student_id %>
    <div class = "required form-control"><%= Student.find(@book_transaction.student_id).name %></div>
  </div>

  <div>
    <%= f.label :book_id %>
    <div class = "required form-control"><%= Book.find(@book_transaction.book_id).title %></div>
  </div>

  <div>
    <%= f.label :issue_date %>
    <%= f.text_field :issue_date, :value => @book_transaction.issue_date.to_formatted_s(:long_ordinal), disabled: true, :class => "required form-control" %> 
  </div>

  <div>
    <%= f.label :return_date %>
    <%= f.text_field :return_date, :class => "required form-control" %>
  </div><br>

  <div>
    <%= f.submit class: 'btn btn-primary'%>
  </div>

<% end %>