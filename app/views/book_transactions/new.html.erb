<%= form_for @book_transaction do |f| %>
  <% if @book_transaction.errors.any? %>
    <div class="error_explanation">
      <span><b>Errors</b></span>
      <ul>
        <% @book_transaction.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :student_id %>
    <%= f.collection_select(:student_id, Student.all, :id, :name) %>
  </div>
  <div>
    <%= f.label :book_id %>
    <%= f.collection_select(:book_id, Book.all, :id, :title)  %>
  </div>
  <div>
    <%= f.label :issue_date %>
    <%= f.text_field :issue_date, :class => "required form-control", :value => "#{ Time.now.to_formatted_s(:long_ordinal) }", :disabled => true %>
  </div><br>
  <div>
    <%= f.submit class: 'btn btn-primary'%>
  </div>
<% end %>
